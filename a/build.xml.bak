        <sshexec host="ts.hravatar.com"
                    username="${prod.username}"
                    keyfile="${prod.keyfile}"
                    trust="true"
                    failonerror="false"
                    command="mkdir ${prod.bu.dir}/${today.date}${today.month}${today.year}"/>
		<scp file="${dist.dir}/tm2score4-1.0.war" keyfile="${prod.keyfile}" todir="${prod.username}@ts.hravatar.com:${prod.bu.dir}/${today.date}${today.month}${today.year}"
				     trust="true">
    </scp>
		<sshexec host="ts.hravatar.com"
            username="${prod.username}"
            keyfile="${prod.keyfile}"
                trust="true"
                command="/usr/pgms/payara41/glassfish/bin/asadmin --user admin --passwordfile /home/ec2-user/gfpasswords.txt undeploy tm2score4-1.0"/>
		<sshexec host="ts.hravatar.com"
            username="${prod.username}"
            keyfile="${prod.keyfile}"
			      trust="true"
			      command="/usr/pgms/payara41/glassfish/bin/asadmin --user admin --passwordfile /home/ec2-user/gfpasswords.txt deploy --virtualservers server --contextroot ts --force=true --deploymentorder 150 ${prod.bu.dir}/${today.date}${today.month}${today.year}/tm2score4-1.0.war"/>
			<antcall target="datetime" />
	</target>


	<!-- <target name="scpdeploy" depends="scpstaticfiles"> -->
